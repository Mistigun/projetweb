<!-- Script pour faire disparaître la bannière au scroll -->
<script>
  // Écoute l’événement "scroll" sur la fenêtre
  window.addEventListener("scroll", function() {
    const banner = document.getElementById("videoBanner");
    // Si l’utilisateur a défilé de plus de 10px
    if (window.scrollY > 10) {
      // On ajoute une classe "hidden" (ou on peut faire un display: none)
      banner.classList.add("hidden");
    } else {
      // Si on veut qu’elle réapparaisse quand on remonte tout en haut
      banner.classList.remove("hidden");
    }
  });
</script>

