  /* Conteneur de la vidéo qui prend toute la fenêtre */
.video-banner {
  position: relative;
  width: 100%;
  height: 100vh;     /* Hauteur = la taille de la fenêtre du navigateur */
  overflow: hidden;  /* Évite les barres de défilement si la vidéo déborde */
  background-color: rgba(0, 0, 0, 0); /* Couleur de fond (au cas où la vidéo n'est pas chargée) */
}

/* Vidéo en plein écran, centrée */
.video-banner video {
  position: absolute;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  transform: translate(-50%, -50%);
  object-fit: cover; /* S’assure que la vidéo couvre le conteneur */
  z-index: -1;       /* Passe la vidéo derrière le contenu */
}

/* Overlay : texte et bouton par-dessus la vidéo */
.video-banner .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* Calque semi-transparent si besoin, sinon enlever ou modifier */
  background: rgba(0, 0, 0,0);

  /* Alignement vertical/horizontal centré */
  display: flex;
  flex-direction: column; 
  align-items: center;    
  justify-content: center;

  color: #fff;  /* Couleur du texte */
  text-align: center;
  padding: 20px;
}

/* Exemple de style pour le titre */
.video-banner .overlay h1 {
  font-size: 3rem;
  margin-bottom: 20px;
  background-color: rgba(0, 0, 0, 0);
}

/* Exemple de style pour le bouton */
.video-banner .overlay button {
  padding: 12px 24px;
  font-size: 1rem;
  cursor: pointer;
  background-color: #ff6600; /* Couleur orange ou autre */
  border: none;
  border-radius: 4px;
  color: #fff;
  transition: background-color 0.3s ease;
}

.video-banner .overlay button:hover {
  background-color: #cc5200; /* Couleur un peu plus sombre au survol */
}